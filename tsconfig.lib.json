{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ES2019"],
    "module": "ESNext",
    "moduleResolution": "bundler", // or "nodenext" if you prefer
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },

  "include": ["src/components/**/*"],
  "exclude": [
    "src/routes",
    "dist",
    "node_modules",
    "vite.config.ts",
    "vitest.config.ts",
    "prettier.config.ts",
    "eslint.config.ts",
    "tailwind.config.ts"
  ]
}
